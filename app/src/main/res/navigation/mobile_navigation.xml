<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_clocks">

    <fragment
        android:id="@+id/navigation_clocks"
        android:name="com.pandacorp.timeui.presentation.ui.clock.ClockFragment"
        android:label="@string/title_clocks"
        tools:layout="@layout/fragment_clock" />

    <fragment
        android:id="@+id/navigation_timer"
        android:name="com.pandacorp.timeui.presentation.ui.timer.TimerFragment"
        android:label="@string/title_timer"
        tools:layout="@layout/fragment_timer">
        <action
            android:id="@+id/nav_action_timer"
            app:destination="@id/navigation_clocks"
            app:popUpTo="@id/navigation_clocks"
            app:popUpToSaveState="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_stopWatch"
        android:name="com.pandacorp.timeui.presentation.ui.stopwatch.StopwatchFragment"
        android:label="@string/title_stopwatch"
        tools:layout="@layout/fragment_stopwatch">
        <action
            android:id="@+id/nav_action_stopwatch"
            app:destination="@id/navigation_clocks"
            app:popUpTo="@id/navigation_clocks"
            app:popUpToSaveState="true" />
    </fragment>

</navigation>
