<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BlueTheme" parent="Theme.Material3.Dark">

        <item name="android:colorBackground">@color/BlueTheme_Background</item>
        <item name="colorPrimary">@color/BlueTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/BlueTheme_colorPrimary</item>
        <item name="colorAccent">@color/BlueTheme_colorAccent</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:navigationBarColor">@color/BlueTheme_colorPrimary</item>
        <item name="android:textColorSecondary">@color/BlueTheme_textColorSecondary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!--  Needed for Bottom Navigation Menu selected item color  -->
        <item name="colorSecondaryContainer">@android:color/white</item>

        <item name="buttonStyle">@style/BlueTheme_Button</item>
        <item name="editTextStyle">@style/BlueTheme_EditText</item>
        <item name="toolbarStyle">@style/BlueTheme_Toolbar</item>
        <item name="alertDialogTheme">@style/BlueTheme_AlertDialog</item>
        <item name="drawerArrowStyle">@style/BlueTheme_DrawerArrowToggle</item>
        <item name="snackbarStyle">@style/BlueTheme_SnackBar</item>
        <item name="bottomNavigationStyle">@style/BlueTheme_BottomNavigationView</item>


    </style>

    <style name="BlueTheme_Button" parent="Widget.Material3.Button">
        <item name="android:background">@color/BlueTheme_ButtonColor</item>
        <item name="color">@color/BlueTheme_ButtonColor</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="cornerSize">15dp</item>

    </style>
    <style name="BlueTheme_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textColorHint">@color/TextColor</item>
    </style>
    <style name="BlueTheme_Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:colorPrimary">@color/TextColor</item>
        <item name="android:background">@color/BlueTheme_colorPrimaryDark</item>
    </style>
    <style name="BlueTheme_DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@color/TextColor</item>
        <item name="color">@color/TextColor</item>

    </style>
    <style name="BlueTheme_AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!--  This theme needs for ListPreference background  -->
        <item name="android:colorBackground">@color/BlueTheme_Background</item>
        <item name="textColorAlertDialogListItem">@color/TextColor</item>
        <item name="color">@color/BlueTheme_Background</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="BlueTheme_SnackBar" parent="Widget.Design.Snackbar">
        <item name="backgroundTint">@color/BlueTheme_colorPrimary</item>
        <item name="iconTint">@drawable/bottom_navigation_style</item>
    </style>
    <style name="BlueTheme_BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/BlueTheme_Background</item>
        <item name="itemIconTint">@drawable/bottom_navigation_style</item>
        <item name="android:foregroundTint">@color/BlueTheme_colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.Material3.Dark">

        <item name="android:colorBackground">@color/DarkTheme_Background</item>
        <item name="colorPrimary">@color/DarkTheme_colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/DarkTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/DarkTheme_colorAccent</item>
        <item name="android:textColor">@color/DarkTheme_TextColor</item>
        <item name="android:textColorSecondary">@color/DarkTheme_textColorSecondary</item>
        <item name="android:textColorHint">@color/DarkTheme_TextColor</item>
        <item name="android:navigationBarColor">@color/DarkTheme_colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!--  Needed for Bottom Navigation Menu selected item color  -->
        <item name="colorSecondaryContainer">@android:color/white</item>

        <item name="buttonStyle">@style/DarkTheme_Button</item>
        <item name="editTextStyle">@style/DarkTheme_EditText</item>
        <item name="toolbarStyle">@style/DarkTheme_Toolbar</item>
        <item name="drawerArrowStyle">@style/DarkTheme_DrawerArrowToggle</item>
        <item name="alertDialogTheme">@style/DarkTheme_AlertDialog</item>
        <item name="snackbarStyle">@style/DarkTheme_SnackBar</item>
        <item name="bottomNavigationStyle">@style/DarkTheme_BottomNavigationView</item>


    </style>

    <style name="DarkTheme_Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/DarkTheme_ButtonColor</item>
        <item name="color">@color/DarkTheme_ButtonColor</item>
        <item name="android:textColor">@color/TextColor</item>
    </style>
    <style name="DarkTheme_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/DarkTheme_TextColor</item>
        <item name="android:textColor">@color/DarkTheme_TextColor</item>
